<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Beats college</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CollegeSiteMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <!-- Fixed Navigation Bar -->
            <div class="nav nav-contianer">
                <ul class="top-nav">
                    <li>
                        <a id="menu-toggle" href="#menu">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
                                <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z" />
                            </svg>
                            Menu
                        </a>
                    </li>
                    <li class="txt-heading">
                        <a name="home" href="#">Beats</a>
                    </li>
                    <li>
                        <a href="https://www.google.com" target="_blank">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
                                <path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z" />
                            </svg>
                            Search
                        </a>
                    </li>
                </ul>
            </div>

            <!--side Nav-->
            <div class="side-nav" id="side-nav">
                <ul>
                    @if(Context.Session.GetString("userRole") == "Admin")
                    {
                        <li><a href="~/Admin/Dashboard"><i class="fa-solid fa-house"></i>&nbsp Home</a></li>
                        <li><a asp-controller="AddClass" asp-action="AddClass"><i class="fa-solid fa-plus"></i>&nbsp Add Class</a></li>
                        <li><a asp-controller="AddTeacher" asp-action="AddTeacher"><i class="fa-solid fa-plus"></i>&nbsp Add Teacher</a></li>
                        <li><a asp-controller="AddStudent" asp-action="AddStudent"><i class="fa-solid fa-plus"></i>&nbsp Add Student</a></li>
                        <li><a href="~/Admin/Dashboard"><i class="fa-solid fa-plus"></i>&nbsp Add Employee Attendance</a></li>
                        <li><a href="~/Admin/Dashboard"><i class="fa-regular fa-eye"></i>&nbsp Employee Attendance</a></li>
                        <li><a asp-controller="AddUser" asp-action="AddUser"><i class="fa-solid fa-plus"></i>&nbsp Add User</a></li>
                    }
                    @if (Context.Session.GetString("userRole") == "Teacher")
                    {
                        <li><a href="~/Teacher/Dashboard"><i class="fa-solid fa-house"></i>&nbsp Home</a></li>
                        <li><a href="#"><i class="fa-solid fa-plus"></i>&nbsp Add Student Attendance</a></li>
                        <li><a href="#"><i class="fa-regular fa-eye"></i>&nbsp View Student Attendance</a></li>
                    }
                    @if (Context.Session.GetString("userRole") == "Student")
                    {
                        <li><a href="~/Student/Dashboard"><i class="fa-solid fa-house"></i>&nbsp Home</a></li>
                    }
                    <li>
                        <form asp-controller="Admin" asp-action="Logout">
                            <button type="submit" class="btn-logout">Log Out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

  <!--   <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CollegeSiteMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
      </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
